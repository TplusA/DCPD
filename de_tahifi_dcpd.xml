<!DOCTYPE node PUBLIC "-//freedesktop//DTD D-BUS Object Introspection 1.0//EN"
 "http://www.freedesktop.org/standards/dbus/1.0/introspect.dtd">
<node name="/de/tahifi/dcpd">
    <interface name="de.tahifi.dcpd.playback">
        <signal name="start"/>
        <signal name="stop"/>
        <signal name="pause"/>
        <signal name="next"/>
        <signal name="previous"/>

        <signal name="fast_forward"/>
        <signal name="fast_rewind"/>
        <signal name="fast_wind_stop"/>
        <signal name="fast_wind_set_factor">
            <arg name="speed" type="y"/>
        </signal>

        <signal name="repeat_mode_toggle"/>
        <signal name="shuffle_mode_toggle"/>
    </interface>

    <interface name="de.tahifi.dcpd.views">
        <signal name="open">
            <arg name="view_name" type="s"/>
        </signal>
        <signal name="toggle">
            <arg name="view_name_back" type="s"/>
            <arg name="view_name_forth" type="s"/>
        </signal>
    </interface>

    <interface name="de.tahifi.dcpd.list_navigation">
        <signal name="level_up"/>
        <signal name="level_down"/>
        <signal name="move_lines">
            <arg name="count" type="i"/>
        </signal>
        <signal name="move_pages">
            <arg name="count" type="i"/>
        </signal>
    </interface>

    <interface name="de.tahifi.dcpd.list_item">
        <signal name="add_to_list">
            <arg name="category" type="s"/>
            <arg name="index" type="q"/>
        </signal>
        <signal name="remove_from_list">
            <arg name="category" type="s"/>
            <arg name="index" type="q"/>
        </signal>
    </interface>
</node>
